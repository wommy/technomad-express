<h1 class="text-center mb-3">todo app</h1>

<form action="/api/todos" method="POST" class="mb-4" id="myForm">
  <div class="form-group">
    <input type="text" name="category" class="form-control" placeholder="category" />
    <input type="text" name="name" class="form-control" placeholder="name" required />
    <input type="text" name="link" class="form-control" placeholder="link" />
    <input type="submit" value="add link" class="btn btn-primary btn-block" />
  </div>
</form>

<h4>todos</h4>
<ul class="list-group">
  {{#each todos}}
    <li class="list-group-item">
      <div>{{this.category}} - <a href="{{this.link}}">{{this.name}}</a></div>
    </li>
  {{/each}}
</ul>

<a href="/api/todos" class="btn btn-light mt-4">visit API</a>
