<form action="/api/todos" method="POST" class="mb-4" id="myForm">
	<div class="form-group">
		<label for="name">name</label>
		<input type="text" name="name" class="form-control" required>
	</div>
	<div class="form-group">
		<label for="isDone">isDone</label>
		<input type="text" name="isDone" class="form-control">
	</div>
	<input type="submit" value="add todo" class="btn btn-primary btn-block">
</form>
<h4>todos</h4>
<ul class="list-group">
	{{#each todos}}
	<li class="list-group-item">{{this.name}} - {{this.isDone}}</li>
	{{/each}}
</ul>
<a href="/api/todos" class="btn btn-light mt-4">visit API</a>